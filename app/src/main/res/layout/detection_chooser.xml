<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/context_padding"
    android:orientation="vertical">

    <TextView
        android:id="@+id/detect_label"
        android:layout_width="280dp"
        android:layout_height="@dimen/button_height"
        android:text="@string/detection_label"
        android:textSize="@dimen/title_size"
        android:textStyle="bold"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/detect_landmark"
        android:layout_width="280dp"
        android:layout_height="@dimen/button_height"
        android:text="@string/detection_landmark"
        android:textSize="@dimen/title_size"
        android:textStyle="bold"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/detect_text"
        android:layout_width="280dp"
        android:layout_height="@dimen/button_height"
        android:text="@string/detection_text"
        android:textSize="@dimen/title_size"
        android:textStyle="bold"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/detect_cancle"
        android:layout_width="280dp"
        android:layout_height="@dimen/button_height"
        android:text="@string/cancle"
        android:textSize="@dimen/title_size"
        android:textStyle="bold"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:textColor="@color/white"/>


</LinearLayout>