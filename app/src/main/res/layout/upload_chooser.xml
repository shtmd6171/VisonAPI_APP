<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/upload_camera"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:layout_margin="@dimen/context_padding"
        android:text="@string/camera"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/upload_gallery"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:layout_marginLeft="@dimen/context_padding"
        android:layout_marginRight="@dimen/context_padding"
        android:layout_marginBottom="@dimen/context_padding"
        android:text="@string/gallery"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"/>



</LinearLayout>